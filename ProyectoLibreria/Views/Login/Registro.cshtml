@model ProyectoLibreria.Models.Entity.Usuario
@{
    ViewData["Title"] = "Registro";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <!-- Incluir estilos de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <!-- Encabezado de la tarjeta -->
                        Registrate
                    </div>
                    <div class="card-body">
                        <!-- Formulario de registro -->
                        <form asp-controller="Login" asp-action="Registro" method="post" enctype="multipart/form-data">
                            <!-- Campo para el nombre del usuario -->
                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="NombreUsuario" required />
                            <!-- Campo para el correo electrónico -->
                            <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Correo" />
                            <!-- Campo para la contraseña -->
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave" />
                            <!-- Campo para cargar la imagen -->
                            <input type="file" class="form-control mb-3" name="Imagen">
                            <!-- Botón para enviar el formulario -->
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrate</button>
                            </div>
                            <!-- Mostrar mensaje de error si existe -->
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            <!-- Enlace para iniciar sesión si ya tiene una cuenta -->
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Login")"> Iniciar Sesion</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Incluir scripts de jQuery y Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

